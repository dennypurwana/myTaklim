<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imageEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/banner_blue"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                />

            <!--<android.support.v7.widget.Toolbar-->
                <!--android:id="@+id/toolbar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="?attr/actionBarSize"-->
                <!--android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
                <!--app:layout_collapseMode="parallax"-->
                <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light"-->
                <!--/>-->


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorPrimary">
                <ImageView
                    android:id="@+id/iconBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/white"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_chevron_left_black_24dp"/>

                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EVENT"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/iconBack"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/headerSubTitle"
                    android:layout_toRightOf="@+id/iconBack"
                    android:layout_below="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Detail"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/header"
                android:id="@+id/contentEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iconEvent"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/colorPrimary"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_event_black_24dp"/>

                <TextView
                    android:id="@+id/eventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_toRightOf="@+id/iconEvent"
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:paddingEnd="20dp"/>

                <TextView
                    android:id="@+id/eventTopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Berawal dari Mimpi Bertemu Rasul, Dakwah Adi Hidayat Sesak Atensi"
                    android:layout_toRightOf="@+id/iconEvent"
                    android:layout_below="@+id/eventTitle"
                    android:textSize="12dp"
                    android:paddingEnd="20dp"/>



            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/contentEvent"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                ></LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/line1"
                android:id="@+id/contentPerformer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iconPerformer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/colorPrimary"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_person_black_24dp"/>
                <TextView
                    android:id="@+id/eventPerformer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ustadz Adi Hidayat"
                    android:layout_toRightOf="@+id/iconPerformer"
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:paddingEnd="20dp"/>

                <TextView
                    android:id="@+id/eventDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Berawal dari Mimpi Bertemu Rasul, Dakwah Adi Hidayat Sesak Atensi"
                    android:layout_toRightOf="@+id/iconPerformer"
                    android:layout_below="@+id/eventPerformer"
                    android:textSize="12dp"
                    android:paddingEnd="20dp"/>



            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/contentPerformer"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                ></LinearLayout>






            <RelativeLayout
                android:layout_below="@+id/line2"
                android:id="@+id/contentLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iconLocation"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/colorPrimary"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_location_city_black_24dp"/>
                <TextView
                    android:id="@+id/eventVenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masjid Al Hidayah"
                    android:layout_toRightOf="@+id/iconLocation"
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:paddingEnd="20dp"/>

                <TextView
                    android:id="@+id/eventVenueAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat: no, Jl. Tomang Tinggi No.3B, RT.13/RW.6, Tomang, Grogol petamburan, Kota Jakarta Barat, Daerah Khusus Ibukota Jakarta 11440"
                    android:layout_toRightOf="@+id/iconLocation"
                    android:layout_below="@+id/eventVenue"
                    android:textSize="12dp"
                    android:paddingEnd="20dp"/>

                <TextView

                    android:id="@+id/btnLihatMaps"
                    android:layout_below="@+id/eventVenueAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Lokasi pada maps."
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="20dp"
                    android:textSize="10dp"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/contentLocation"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                ></LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/line3"
                android:id="@+id/contentTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iconTime"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/colorPrimary"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_history_black_24dp"/>
                <TextView
                    android:id="@+id/eventDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Senin, 23 Desember 2019"
                    android:layout_toRightOf="@+id/iconTime"
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:paddingEnd="20dp"/>

                <TextView
                    android:id="@+id/eventTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20.00 - 22.00 pm (2 Jam)"
                    android:layout_toRightOf="@+id/iconTime"
                    android:layout_below="@+id/eventDate"
                    android:textSize="12dp"
                    android:paddingEnd="20dp"/>


            </RelativeLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/contentTime"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                ></LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorAccent"
                android:text="APPLY"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
