<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iconHeader"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_event_black_24dp"
        android:tint="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/titleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="30dp"
        android:textSize="18dp"
        android:text="List Event"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/iconHeader"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/subTitleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="30dp"
        android:textSize="14dp"
        android:text="menu event untuk mengakses acara-acara kajian di sekitar anda."
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/iconHeader"
        android:layout_below="@+id/titleHeader"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"/>


</RelativeLayout>