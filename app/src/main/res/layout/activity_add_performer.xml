                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvYoutube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Youtube "
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/title_color"
                    android:textSize="12dp"/>



                <RelativeLayout
                    android:layout_below="@+id/tvYoutube"
                    android:id="@+id/cardYoutube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">

                    <EditText
                        android:id="@+id/edTextYoutube"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:hint=""
                        android:paddingEnd="40dp"
                        android:background="@drawable/edittext_round_corner"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/tab_disable"
                        />
                    <RelativeLayout
                        android:id="@+id/iconLayoutYoutube"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/checkIconYoutube"
                            android:layout_alignParentEnd="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/check_icon"
                            android:visibility="gone"
                            android:padding="10dp"/>

                        <ImageView
                            android:id="@+id/closeIconYoutube"
                            android:layout_alignParentEnd="true"
                            android:layout_width="40dp"
