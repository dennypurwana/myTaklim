<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/bannerEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/donasi"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                android:contentDescription="TODO" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/iconBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/white"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_chevron_left_black_24dp"/>
                <TextView
                    android:layout_toRightOf="@+id/iconBack"
                    android:id="@+id/namaEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donasi"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:paddingEnd="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Ayo donasikan uang anda ke :"/>

            <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label1"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="26dp"
                android:textStyle="bold"
                android:text="Yayasan Daarul Quran"/>

            <ImageView
                android:id="@+id/iconBCA"
                android:layout_below="@+id/label2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_bca"/>

            <TextView
                android:id="@+id/label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label2"
                android:layout_toRightOf="@+id/iconBCA"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:textSize="18dp"
                android:text="132131311231"/>

            <ImageView
                android:id="@+id/iconMandiri"
                android:layout_below="@+id/iconBCA"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_mandiri"/>

            <TextView
                android:id="@+id/label4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iconBCA"
                android:layout_toRightOf="@+id/iconMandiri"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:textSize="18dp"
                android:text="3131233231"/>




        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
