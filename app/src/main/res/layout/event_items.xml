<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp">


        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageUstadz"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:src="@drawable/image_ustadz"/>


                <TextView
                android:id="@+id/eventDate"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 Maret 2019"
                android:layout_toRightOf="@+id/imageUstadz"
                android:paddingEnd="20dp"
                android:textSize="22px"
                android:textStyle="bold"
                />
                <TextView
                android:layout_below="@+id/eventDate"
                android:id="@+id/titleEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kajian Mingguan Ustadz Adi Hidayat"
                android:layout_toRightOf="@+id/imageUstadz"
                android:paddingEnd="20dp"
                android:textSize="32px"
                android:textColor="@color/text_color_card_title"
                android:textStyle="bold"
                />

                <TextView
                android:id="@+id/venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masjid Almughni"
                android:layout_toRightOf="@+id/imageUstadz"
                android:layout_below="@+id/titleEvent"
                android:paddingEnd="20dp"
                android:textSize="27px"
                />

                <TextView
                android:id="@+id/venueAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jalan kawali panjalu no 9. Gatot subroto DKI JAKARTA"
                android:layout_toRightOf="@+id/imageUstadz"
                android:layout_below="@+id/venue"
                android:paddingEnd="20dp"
                android:textSize="20px"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/footer"
            android:layout_below="@+id/content"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/eventTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ikuti"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:textSize="22px"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/eventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.00-22.00"
                android:textSize="20px"
                android:layout_alignParentEnd="true"
                android:paddingEnd="10dp"
                />
        </RelativeLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>