<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp">


        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/bannerImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/banner_adi_hidayat"/>


            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/titleEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@+id/bannerImage"
                android:paddingEnd="10dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                />

            <TextView
                android:layout_below="@+id/titleEvent"
                android:id="@+id/namaUstadz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@+id/bannerImage"
                android:paddingEnd="10dp"
                android:textSize="14dp"
                android:textColor="@color/colorPrimaryDark"
                />

                <TextView
                    android:layout_below="@+id/namaUstadz"
                    android:layout_marginBottom="10dp"
                android:id="@+id/eventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 Maret 2019"
                android:layout_toRightOf="@+id/bannerImage"
                android:textSize="12dp"
                    android:textColor="@color/gray_light"
                />



            <TextView
                android:layout_below="@+id/eventDate"
                android:paddingLeft="10dp"
                android:id="@+id/venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dsdadasdasd"
                android:textAlignment="inherit"
                android:paddingEnd="10dp"
                android:textSize="14dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_below="@+id/venue"
                android:paddingLeft="10dp"
                android:id="@+id/venueAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dsdadasdasd"
                android:textAlignment="inherit"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:textSize="12dp"
                />

            <!--<ImageView-->
                <!--android:id="@+id/iconView"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_width="25dp"-->
                <!--android:layout_height="25dp"-->
                <!--android:visibility="visible"-->
                <!--android:tint="@color/colorAccent"-->
                <!--android:src="@drawable/icon_detail"/>-->

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/footer"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconTime"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:tint="@color/blue_gray_400"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iconTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lihat detail kajian"
                android:textAlignment="inherit"
                android:paddingEnd="20dp"
                android:textSize="10dp"
                android:textColor="@color/blue_gray_400"
                />

        </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/footer"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        ></LinearLayout>



    </RelativeLayout>
